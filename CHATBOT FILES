from flask import Flask, request
import openai
import os

app = Flask(__name__)

# Configuração da chave da OpenAI (substitua pela sua chave real)
openai.api_key = "SUA_CHAVE_OPENAI"

@app.route("/webhook", methods=["POST"])
def webhook():
    data = request.json
    user_message = data["Body"]  # Mensagem recebida no WhatsApp

    # Enviar a mensagem para a OpenAI
    response = openai.ChatCompletion.create(
        model="gpt-4",
        messages=[{"role": "system", "content": "Você é um assistente educacional que ajuda alunos com dúvidas."},
                  {"role": "user", "content": user_message}]
    )

    bot_response = response["choices"][0]["message"]["content"]
    return {"message": bot_response}

if __name__ == "__main__":
    app.run(host="0.0.0.0", port=5000)
